{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "prisma/**/*", "jest.setup.ts"],
  "exclude": ["node_modules"]
}
